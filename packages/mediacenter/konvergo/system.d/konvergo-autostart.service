[Unit]
Description=Konvergo user autostart script
Before=konvergo.service
After=graphical.target
ConditionPathExists=/storage/.config/autostart.sh

[Service]
Type=oneshot
Environment=HOME=/storage
ExecStart=-/bin/sh -c ". /etc/profile; exec /bin/sh /storage/.config/autostart.sh"
RemainAfterExit=yes

[Install]
WantedBy=konvergo.service
